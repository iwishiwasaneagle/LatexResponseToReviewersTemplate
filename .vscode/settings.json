{
    "[latex]": {
        "editor.formatOnPaste": true,
        "editor.wordWrap": "on",
        "editor.wordWrapColumn": 80
    },
    "latex-workshop.latex.clean.command": "latexmk",
    "latex-workshop.latex.clean.args": ["-C"],
    "latex-workshop.latex.recipes": [
        {
            "name": "latexmk üîÉ",
            "tools": [
                "latexmk",
                "latexmk",
                "bibtex",
                "makeindex",
                "latexmk"
            ]
        },
        {
            "name": "latexmk 1Ô∏è‚É£",
            "tools": [
                "latexmk"
            ]
        },
        {
            "name": "bibtex 1Ô∏è‚É£",
            "tools": [
                "bibtex"
            ]
        },
        {
            "name": "makeindex 1Ô∏è‚É£",
            "tools": [
                "makeindex"
            ]
        }
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                // "-f",
                "-pdf",
                "%DOCFILE_EXT%"
            ]
        },
        {
            "name": "bibtex",
            "command": "bibtex",
            "args": [
                "%DOCFILE%"
            ],
            "env": {}
        },
        {
            "name": "makeindex",
            "command": "makeindex",
            "args": [
                "%DOCFILE%.nlo",
                "-s",
                "nomencl.ist", 
                "-o", 
                "%DOCFILE%.nls"
            ],
            "env": {}
        },
    ],
    "latex-workshop.latex.watch.files.ignore": [
        // default entries:
        "**/*.aux",
        "**/*.bbl",
        "**/*.bcf",
        "**/*.blg",
        "**/*.idx",
        "**/*.ind",
        "**/*.lof",
        "**/*.lot",
        "**/*.out",
        "**/*.toc",
        "**/*.acn",
        "**/*.acr",
        "**/*.alg",
        "**/*.glg",
        "**/*.glo",
        "**/*.gls",
        "**/*.ist",
        "**/*.fls",
        "**/*.log",
        "**/*.nav",
        "**/*.snm",
        "**/*.fdb_latexmk",
        "**/*.synctex.gz",
        "**/*.run.xml",
        "**/*.nls"
],
}
